<% if params[:day] %>
  <% if Date.new(params[:year].to_i, params[:month].to_i, params[:day].to_i).strftime("%w") == "0" %>
    <span class="red">
  <% elsif Date.new(params[:year].to_i, params[:month].to_i, params[:day].to_i).strftime("%w") == "6" %>
    <span class="blue">
  <% else %>
    <span>
  <% end %>

  <% date = Date.new(params[:year].to_i, params[:month].to_i, params[:day].to_i) %>
  <%= link_to date.strftime("%Y年%-m月%-d日(#{%w(日 月 火 水 木 金 土)[date.wday]})"), "#{reports_path}/#{params[:year]}/#{params[:month]}/#{params[:day]}" %>
  </span>
<% else %>
  <%= link_to Date.new(params[:year].to_i, params[:month].to_i).strftime("%Y年%-m月"), "#{reports_path}/#{params[:year]}/#{params[:month]}" %>
<% end %>
