  <%= @report.advance %>
</p>

<% if @report.rests %>
  <p><%=t "activerecord.models.rest" %></p>
  <% @report.rests.each do |rest| %>
    <p>
      <b><%=t "activerecord.attributes.rest.location" %></b>
      <%= rest.location %>
    </p>
    <p>
      <b><%=t "activerecord.attributes.rest.started_at" %></b>
      <%= rest.started_at.strftime("%Y年%m月%d日 %H時%M分") %>
    </p>
    <p>
      <b><%=t "activerecord.attributes.rest.ended_at" %></b>
      <%= rest.ended_at.strftime("%Y年%m月%d日 %H時%M分") %>
    </p>
    <p><%= link_to t("link.edit"), edit_rest_path(rest) %></p>
  <% end %>
  <p><%= link_to t("link.new"), "#{new_rest_path}?report_id=#{@report.id}" %></p>
  <p>
    <b><%=t "activerecord.attributes.rest.estimated_time" %></b>
    <%= @estimated_time %>
  </p>
<% end %>

<%= link_to t("link.edit"), edit_report_path(@report) %> |
