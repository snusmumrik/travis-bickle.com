<h2>
  <% if params[:day] %>
    <% if Date.new(params[:year].to_i, params[:month].to_i, params[:day].to_i).strftime("%w") == "0" %>
      <span class="red">
    <% elsif Date.new(params[:year].to_i, params[:month].to_i, params[:day].to_i).strftime("%w") == "6" %>
      <span class="blue">
    <% else %>
      <span>
    <% end %>
    <% date = Date.new(params[:year].to_i, params[:month].to_i, params[:day].to_i) %>
    <%= date.strftime("%Y年%m月%d日(#{%w(日 月 火 水 木 金 土)[date.wday]})") %>
    </span>
  <% else %>
    <%= Date.new(params[:year].to_i, params[:month].to_i).strftime("%Y年%m月") %>
  <% end %>
  <%=t "activerecord.models.report" %>
</h2>

<% for i in 1..Date.new(params[:year].to_i, params[:month].to_i, -1).day %>
  
  <%#= REFACTORING REQUIRED %>
  <% if params[:id] %>
    <% if Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "0" %>
      <%= link_to "#{i}日", "/#{controller.controller_path}/#{params[:id]}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "red" %>
    <% elsif Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "6" %>
      <%= link_to "#{i}日", "/#{controller.controller_path}/#{params[:id]}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "blue" %>
    <% else %>
      <%= link_to "#{i}日", "/#{controller.controller_path}/#{params[:id]}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}" %>
    <% end %>
  <% else %>
    <% if Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "0" %>
      <%= link_to "#{i}日", "/#{controller.controller_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "red" %>
    <% elsif Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "6" %>
      <%= link_to "#{i}日", "/#{controller.controller_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "blue" %>
    <% else %>
      <%= link_to "#{i}日", "/#{controller.controller_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}" %>
    <% end %>
  <% end %>
<% end %>
