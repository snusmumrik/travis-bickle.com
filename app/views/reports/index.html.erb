<link rel="stylesheet" type="text/css" media="print" href="/assets/documents.css" />

<h1>
  <%= "#{params[:year]}年#{params[:month]}月#{params[:day]}日" %>
  <%= t("views.report.index") %>
</h1>

<%= render "reports" %>

<div class="sales">
  <table class="table table-striped table-bordered table-hover">
    <tr>
      <th class="span2"><%=t "activerecord.attributes.report.cash" %></th>
      <td class="span2"><%= number_to_currency @cash, :locale => "ja" %></td>
      <td class="span4"></td>
      <th class="span2"><%=t "activerecord.attributes.report.sales" %></th>
      <td class="span2"><%= number_to_currency @sales, :locale => "ja" %></td>
    </tr>
    <tr>
      <th><%=t "activerecord.attributes.report.ticket" %></th>
      <td><%= number_to_currency @ticket, :locale => "ja" %></td>
      <td></td>
      <th><%=t "activerecord.attributes.report.extra_sales" %></th>
      <td><%= number_to_currency @extra_sales, :locale => "ja" %></td>
    </tr>
    <tr>
      <th><%=t "activerecord.attributes.report.account_receivable" %></th>
      <td><%= number_to_currency @account_receivable, :locale => "ja" %></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th><%=t "activerecord.attributes.report.fuel_cost" %></th>
      <td><%= number_to_currency @fuel_cost, :locale => "ja" %></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <tr>
      <th><%=t "activerecord.attributes.report.deficiency_account" %></th>
      <td><%= number_to_currency @deficiency_account, :locale => "ja" %></td>
      <td></td>
      <th><%=t "activerecord.attributes.report.surplus_funds" %></th>
      <td><%= number_to_currency @surplus_funds, :locale => "ja" %></td>
    </tr>
    <tr>
      <th><%=t "activerecord.attributes.report.advance" %></th>
      <td><%= number_to_currency @advance, :locale => "ja" %></td>
      <th></th>
      <th></th>
      <td></td>
    </tr>
    <tr>
      <th><%= t("label.report.total") %></th>
      <td><%= number_to_currency @cash + @ticket + @account_receivable + @fuel_cost + @deficiency_account + @advance, :locale => "ja" %></td>
      <th></th>
      <th><%= t("label.report.total") %></th>
      <td><%= number_to_currency @sales + @extra_sales + @surplus_funds, :locale => "ja" %></td>
    </tr>
  </table>
</div>

<%= high_chart("chart", @chart) %>

<%= link_to t("link.new") + t("activerecord.models.report"), new_report_path, :class => "btn" %>
<%= link_to t("link.document.roll_calls"), "#{documents_path}/roll_calls/#{params[:year]}/#{params[:month]}/#{params[:day]}.pdf", :class => "btn", :target => "_blank" %>
