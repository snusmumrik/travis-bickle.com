    <% end %>
  </div>
  <div class="field">
    <%= f.label :ride_address %><br />
    <%= f.text_field :ride_address %>
  </div>
  <div class="field">
    <%= f.label :leave_address %><br />
    <%= f.text_field :leave_address %>
  </div>
  <div class="field">
    <%= f.label :passengers %><br />
    <%= f.text_field :passengers %>
  </div>
  <div class="field">
    <%= f.label :fare %><br />
    <%= f.text_field :fare %>
  </div>
    <div class="field">
    <%= f.label :started_at %><br />
    <%= f.datetime_select :started_at, :default => @report.started_at %>
  </div>
  <div class="field">
      <%= f.label :ended_at %><br />
      <%= f.datetime_select :ended_at, :default => @report.ended_at %>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
