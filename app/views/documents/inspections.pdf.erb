<%= wicked_pdf_stylesheet_link_tag "bootstrap" %>
<%= wicked_pdf_stylesheet_link_tag "documents" %>

<style type="text/css">
h1 {
  font-size: 1.7em;
  margin: 0;
}

h2 {
  font-size: 1.2em;
  margin: 0;
}

h3 {
  font-size: 1em;
  margin: 0;
}

.page-break {
  display:block;
  clear:both;
  page-break-after:always;
}

table {
  font-size: 0.7em;
}

table th {
  text-align: center !important;
}

table td {
  padding: 8px;
  line-height: 8px !important;
  text-align: center !important;
}

.title {
  width: 50%;
  float: left;
}

.boxes {
  width: 30%;
  float: right;
}

.square {
  margin-bottom: 20px;
}

.square th {
  width: 70px;
  padding: 8px;
  line-height: 20px;
  vertical-align: top;
}

.square td {
  height: 70px;
  width: 70px;
}

table.small th,td{
  font-size: 11px !important;
}

td {
  vertical-align: middle !important;
}

.small {
  font-size: 70%;
} 
</style>

<div class="left title">
  <h2><%= "#{params[:year]}年" %> <%=t "label.document.inspection" %></h2>
  <table class="table table-striped table-bordered table-hover table-narrow minimize">
    <tr>
      <td class="span3 left"><%= current_user.username %></td>
    </tr>
  </table>
</div>

<div class="clear"></div>

<% for i in 0..(@cars.size - 1)/7 %>
  <table class="table table-striped table-bordered table-hover small">
    <tr>
      <th colspan="2"><%=t "activerecord.attributes.car.registration_number" %></th>
      <% for j in 1..12 %>
        <th><%= "#{j}月" %></th>
      <% end %>
      <th>備考</th>
    </tr>
    <% @cars.each_with_index do |car, k| %>
      <% if k >= 7*i && k < 7*(i + 1) %>
        <tr>
          <td rowspan="3">
            <%= car.registration_number %>
          </td>
          <td><%= car.name %></td>
          <% for l in 1..12 %>
            <% if @inspections[car.id][l] %>
              <td>
              <% if @inspections[car.id][l][0] == "車検" %>
                <strong><%= @inspections[car.id][l][0] %></strong>
              <% else %>
                <%= @inspections[car.id][l][0] %>
              <% end %>
              </td>
            <% else %>
              <td></td>
            <% end %>
          <% end %>
          <td class="span2"></td>
        </tr>
        <tr>
          <td><%=t "label.inspection.schedule" %></td>
          <% for l in 1..12 %>
            <% if @inspections[car.id][l] %>
              <% if @inspections[car.id][l][0] == "車検" %>
                <td><%= @inspections[car.id][l][1].day %></td>
              <% else %>
                <td></td>
              <% end %>
            <% else %>
              <td></td>
            <% end %>
          <% end %>
          <td></td>
        </tr>
        <tr>
          <td><%=t "label.inspection.implementation" %></td>
          <% for l in 1..12 %>
            <td></td>
          <% end %>
          <td></td>
        </tr>
      <% end %>
    <% end %>
  </table>

  <div class="page-break"></div>
<% end %>