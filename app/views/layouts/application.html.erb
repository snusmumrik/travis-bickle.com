<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <title><%= @title %></title>
    <meta name="description" content="<%= @description %>">
    <meta name="author" content="">
    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le styles -->
    <!-- <link href="/assets/bootstrap/css/bootstrap.css" rel="stylesheet"> -->

    <!-- <link href="/assets/bootstrap/css/bootstrap-responsive.css" rel="stylesheet"> -->

    <!-- Le fav and touch icons -->
    <%= favicon_link_tag "favicon.ico" %>

    <%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="i-bar"></span>
            <span class="i-bar"></span>
            <span class="i-bar"></span>
          </a>
          <a class="brand" href="/">TravisBickle</a>
          <div class="nav-collapse">
            <ul class="nav">
              <% if params[:id] == "cars" %><li class="active"><% else %><li><% end %><%= link_to t("activerecord.models.car"), cars_path %></li>
              <% if params[:id] == "drivers" %><li class="active"><% else %><li><% end %><%= link_to t("activerecord.models.driver"), drivers_path %></li>
              <% if params[:id] == "check_points" %><li class="active"><% else %><li><% end %><%= link_to t("activerecord.models.check_point"), check_points_path %></li>
              <% if params[:id] == "reports" %><li class="active"><% else %><li><% end %><%= link_to t("activerecord.models.report"), "#{reports_path}/#{Date.today.year}/#{Date.today.month}/#{Date.today.day}" %></li>
              <% if params[:id] == "sales" %><li class="active"><% else %><li><% end %><%= link_to t("link.sale.index"), "#{sales_path}/#{Date.today.year}/#{Date.today.month}" %></li>
              <% if params[:id] == "notifications" %><li class="active"><% else %><li><% end %><%= link_to t("activerecord.models.notification"), notifications_path %></li>
              <!-- <li><%= link_to t("link.contact"), "mailto:info@test.com" %></li> -->
            </ul>
            <% if user_signed_in? %>
              <div class="navbar-text pull-right span2"><%= link_to(t("link.user.signout"), destroy_user_session_path, :method => :delete) %></div>
              <div class="navbar-text pull-right"><%= link_to current_user.username, user_path(current_user.username) %></div>
            <% else %>
              <div class="navbar-text pull-right span2"><%= link_to t("link.user.signup"), new_user_registration_path %></div>
              <div class="navbar-text pull-right"><%= link_to t("link.user.signin"), new_user_session_path %></div>
            <% end %>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container padding-top">
    <% if notice %>
      <div class="alert alert-success">
        <p id="notice"><%= notice %></p>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-error">
        <p id="alert"><%= alert %></p>
      </div>
    <% end %>

    <%= yield %>

      <hr>
      <footer>
        <div">Travis Bickle &copy; <%= Date.today.year %> Powered by Chishaku (智積)</div>
      </footer>
    </div> <!-- /container -->

    <%= javascript_include_tag "application" %>
    <% if controller.controller_name == "locations" %><%= yield :scripts %><% end %>
  </body>
</html>
