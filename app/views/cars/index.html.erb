<h1><%= t("activerecord.models.car") %><%= t("link.index") %></h1>

<%= form_for Car.new, :url => cars_path, :remote => true, :html => {:method => :get} do |f| %>
  <%= f.search_field :name %>
  <%= f.submit t("link.search"), :class => "btn" %>
<% end %>

<%= paginate @cars %>
<table class="table table-striped table-bordered">
  <tr>
    <th><%=t "activerecord.attributes.car.name" %></th>
    <th><%=t "activerecord.attributes.car.registration_number" %></th>
    <th><%=t "activerecord.attributes.car.identification_number" %></th>
    <th><%=t "activerecord.attributes.car.model_number" %></th>
    <th><%=t "activerecord.attributes.car.model_name" %></th>
    <th><%=t "activerecord.attributes.car.taxi_registration_date" %></th>
    <th><%=t("activerecord.attributes.car.base_fare") %></th>
    <th><%=t("activerecord.attributes.car.meter_fare") %></th>
    <th><%=t("activerecord.attributes.car.initial_meter") %></th>
    <th><%=t("activerecord.attributes.car.meter_fare_segment") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tbody id="cars">
    <%= render @cars %>
  </tbody>
</table>

<br />
<%= paginate @cars %>

<%= link_to t("link.new"), new_car_path, :class => "btn" %>
<%= link_to t("activerecord.models.inspection") + t("link.index"), inspections_path, :class => "btn" %>

