<h1>Listing cars</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Car_Type</th>
    <th>Car_Modle</th>
    <th>Base fare</th>
    <th>Meter fare</th>
    <th>Deleted at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cars.each do |car| %>
  <tr>
    <td><%= car.user %></td>
    <td><%= car.name %></td>
    <td><%= car.car_type %></td>
    <td><%= car.car_modle %></td>
    <td><%= car.base_fare %></td>
    <td><%= car.meter_fare %></td>
    <td><%= car.deleted_at %></td>
    <td><%= link_to 'Show', car %></td>
    <td><%= link_to 'Edit', edit_car_path(car) %></td>
    <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

