      <td><%= number_to_currency report.advance, :locale => "ja" %></td>
      <td>
        <%= link_to t("link.show"), report, :class => "btn" %>
        <%= link_to t("link.edit"), edit_report_path(report), :class => "btn" %>
      </td>
    </tr>
  <% end %>

