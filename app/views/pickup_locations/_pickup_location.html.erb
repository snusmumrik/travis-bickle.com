<tr>
  <td><%= pickup_location.name %></td>
  <td><%= pickup_location.address %></td>
  <td><%= pickup_location.latitude %></td>
  <td><%= pickup_location.longitude %></td>
  <td><%= link_to t("link.show"), "#{pickup_location_path(pickup_location)}", :class => "btn" %></td>
  <td><%= link_to t("link.edit"), edit_pickup_location_path(pickup_location), :class => "btn" %></td>
  <td><%= link_to t("link.destroy"), pickup_location, method: :delete, data: { confirm: t("message.destroy_confirmation") }, :class => "btn" %></td>
</tr>
