<%= gmaps(:map_options => {:language => "ja", :center_latitude => controller.current_user.latitude, :center_longitude => controller.current_user.longitude, :zoom => 13, :auto_adjust => false},
          :markers => {:data => @json}) %>

<% content_for :scripts do %>
  <script type="text/javascript" charset="utf-8">
    Gmaps.map.callback = function() {
      for (var i = 0; i < Gmaps.map.markers.length; ++i) {
        google.maps.event.addListener(Gmaps.map.markers[i].serviceObject, 'click', function(object) {
        });
      }
    }
  </script>
<% end %>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th><%=t "activerecord.attributes.location.car" %></th>
    <th><%=t "activerecord.attributes.location.address" %></th>
    <th><%=t "activerecord.attributes.location.updated_at" %></th>
    <th></th>
  </tr>

  <tbody id="locations">
    <%= render @locations %>
  </tbody>
</table>
