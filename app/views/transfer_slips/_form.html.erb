      <h2><%= pluralize(@transfer_slip.errors.count, "error") %> prohibited this transfer_slip from being saved:</h2>

      <ul>
      <% @transfer_slip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :report_id, :value => params[:report_id] %>
