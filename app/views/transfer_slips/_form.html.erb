      <%= f.text_field :credit, :value => t("views.transfer_slip.debit") %>
    <% else %>
      <%= f.text_field :credit %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :credit_amount %><br />
    <%= f.number_field :credit_amount %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_field :note %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
