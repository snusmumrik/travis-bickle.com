<div class="pagination calender">
  <ul>
    <% if Date.today.year == params[:year].to_i && Date.today.month == params[:month].to_i %>
      <% for i in 1..Date.today.day %>
        <% if Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "0" %>
          <li><%= link_to "#{i}日", "/#{reports_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "red" %></li>
        <% elsif Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "6" %>
          <li><%= link_to "#{i}日", "/#{reports_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "blue" %></li>
        <% else %>
          <li><%= link_to "#{i}日", "/#{reports_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}" %></li>
        <% end %>
      <% end %>
    <% else %>
      <% for i in 1..Date.new(params[:year].to_i, params[:month].to_i, -1).day %>
        <% if Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "0" %>
          <li><%= link_to "#{i}日", "/#{reports_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "red" %></li>
        <% elsif Date.new(params[:year].to_i, params[:month].to_i, i).strftime("%w") == "6" %>
          <li><%= link_to "#{i}日", "/#{reports_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}", :class => "blue" %></li>
        <% else %>
          <li><%= link_to "#{i}日", "/#{reports_path}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).year}/#{Date.new(params[:year].to_i, params[:month].to_i, 9).month}/#{i}" %></li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>
