<h1><%= t("activerecord.models.notification") %><%= t("link.index") %></h1>

<%= form_for Notification.new, :url => notifications_path, :remote => true, :html => {:method => :get} do |f| %>
  <%= f.search_field :text %>
  <%= f.submit t("link.search") %>
<% end %>

<table class="table table-striped table-bordered">
  <tr>
    <th><%=t "activerecord.attributes.notification.car" %></th>
    <th><%=t "activerecord.attributes.notification.text" %></th>
    <th><%=t "activerecord.attributes.notification.read" %></th>
    <th><%=t "activerecord.attributes.notification.cancel" %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <tbody id="notifications">
    <%= render @notifications %>
  </tbody>
</table>

<br />

<%= link_to t("link.new"), new_notification_path %>
