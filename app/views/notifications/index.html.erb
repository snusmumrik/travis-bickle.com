<h1><%= t("activerecord.models.notification") %><%= t("link.index") %></h1>

<%= form_for Notification.new, :url => notifications_path, :remote => true, :html => {:method => :get} do |f| %>
  <%= f.search_field :text %>
  <%= f.submit t("link.search"), :class => "btn" %>
<% end %>

<%= paginate @notifications %>
<table class="table table-striped table-bordered">
  <tr>
    <th><%=t "activerecord.attributes.notification.car" %></th>
    <th><%=t "activerecord.attributes.notification.text" %></th>
    <th><%=t "activerecord.attributes.notification.accepted_at" %></th>
    <th><%=t "activerecord.attributes.notification.canceled_at" %></th>
    <th></th>
  </tr>

  <tbody id="notifications">
    <%= render @notifications %>
  </tbody>
</table>

<br />
<%= paginate @notifications %>

<%= link_to t("link.new") + t("activerecord.models.notification"), new_notification_path, :class => "btn" %>
