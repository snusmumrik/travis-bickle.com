<div class="form-signin">
  <h2><%=t "link.user.signin" %></h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <div><%= f.label :signin %><br />
      <%= f.text_field :signin %></div>

    <div><%= f.label :password %><br />
      <%= f.password_field :password %></div>

    <% if devise_mapping.rememberable? -%>
      <div class="inline"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit I18n.t("link.user.signin"), :class => "btn btn-default" %></div>
  <% end %>

  <%= render :partial => "users/shared/links" %>
</div>
