<h1>Listing drivers</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Birthday</th>
    <th>Blood type</th>
    <th>Licence number</th>
    <th>Start working at</th>
    <th>Deleted at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @drivers.each do |driver| %>
  <tr>
    <td><%= driver.user %></td>
    <td><%= driver.name %></td>
    <td><%= driver.birthday %></td>
    <td><%= driver.blood_type %></td>
    <td><%= driver.licence_number %></td>
    <td><%= driver.start_working_at %></td>
    <td><%= driver.deleted_at %></td>
    <td><%= link_to 'Show', driver %></td>
    <td><%= link_to 'Edit', edit_driver_path(driver) %></td>
    <td><%= link_to 'Destroy', driver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

