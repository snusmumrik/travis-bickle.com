<tr>
  <td><%= link_to driver.name, "#{driver_path(driver)}" %></td>
  <td><%= driver.email %></td>
  <td>
    <%= link_to t("link.show"), "#{driver_path(driver)}", :class => "btn" %>
    <%= link_to t("link.edit"), edit_driver_path(driver), :class => "btn" %>
    <%= link_to t("activerecord.models.tax_withholding"), "#{tax_withholdings_path}/#{driver.id}/#{Date.today.year}", :class => "btn" %>
    <%= link_to t("link.destroy"), driver, method: :delete, data: { confirm: t("message.destroy_confirmation") }, :class => "btn btn-danger" %>
  </td>
</tr>
