<tr>
  <td><%= link_to driver.name, "#{driver_path(driver)}" %></td>
  <td><%= driver.email %></td>
  <td><%= link_to t("link.show"), "#{driver_path(driver)}", :class => "btn" %></td>
  <td><%= link_to t("link.edit"), edit_driver_path(driver), :class => "btn" %></td>
  <td><%= link_to t("link.destroy"), driver, method: :delete, data: { confirm: t("message.destroy_confirmation") }, :class => "btn" %></td>
</tr>
